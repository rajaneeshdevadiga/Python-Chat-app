{
  "family": "my-ecs-task-family",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::${{ secrets.AWS_ACCOUNT_ID }}:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "chat-app",
      "image": "public.ecr.aws/w6p8h4u6/chat-app:latest",  
      "cpu": 256,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 5000,               
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/my-ecs-task",
          "awslogs-region": "us-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "taskRoleArn": "arn:aws:iam::${{ secrets.AWS_ACCOUNT_ID }}:role/ecsTaskRole"
}
