{
  "family": "python-app-task-family",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::{{secrets.AWS_ACCOUNT_ID}}:role/ECSTaskExecution",
  "containerDefinitions": [
    {
      "name": "python-app",
      "image": "730335489777.dkr.ecr.us-east-1.amazonaws.com/python-app:v1",
      "cpu": 256,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/python-app-task",
          "awslogs-region": "{{secrets.AWS_REGION}}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "taskRoleArn": "arn:aws:iam::{{secrets.AWS_ACCOUNT_ID}}:role/ECSTaskRole"
}
